<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.FlightController">
    <!-- TableView hiển thị các chuyến bay -->
    <TableView fx:id="flightTable" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="100.0">
        <columns>
            <TableColumn text="Flight Number" fx:id="flightNumberColumn" />
            <TableColumn text="Departure" fx:id="departureColumn" />
            <TableColumn text="Arrival" fx:id="arrivalColumn" />
            <TableColumn text="Departure Time" fx:id="departureTimeColumn" />
            <TableColumn text="Arrival Time" fx:id="arrivalTimeColumn" />
            <TableColumn text="Gate" fx:id="gateColumn" />
            <TableColumn text="Airplane" fx:id="airplaneColumn" />
            <TableColumn text="Status" fx:id="statusColumn" />
        </columns>
    </TableView>

    <!-- HBox chứa các nút chức năng -->
    <HBox spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <Button text="Add Flight" onAction="#handleAddFlight" />
        <Button text="Edit Flight" onAction="#handleEditFlight" />
        <Button text="Delete Flight" onAction="#handleDeleteFlight" />
        <Button text="Refresh" onAction="#handleRefresh" />
        <Button text="View Details" onAction="#handleViewDetails" />
        <Button text="Manage Employee" onAction="#handleManageEmployee" />
        <Button text="Manage Gate" onAction="#handleManageGate" />
        <Button text="Manage Airplane" onAction="#handleManageAirplane" />
    </HBox>
</AnchorPane>
