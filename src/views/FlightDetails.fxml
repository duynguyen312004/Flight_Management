<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.FlightDetailsController" stylesheets="@styles.css" styleClass="root">
    <!-- Tiêu đề chuyến bay -->
    <Label fx:id="flightInfoLabel" layoutX="20.0" layoutY="20.0" styleClass="header-label" text="Flight Information" wrapText="true" />

    <!-- Thông tin cổng -->
    <Label fx:id="gateInfoLabel" layoutX="20.0" layoutY="100.0" styleClass="section-title" text="Gate: No Gate Assigned" />

    <!-- Thông tin Summary -->
    <Label layoutX="20.0" layoutY="140.0" styleClass="section-title" text="Summary:" />
    <Label fx:id="ticketCountLabel" layoutX="40.0" layoutY="170.0" styleClass="small-info" text="Total Tickets: 0" />
    <Label fx:id="passengerCountLabel" layoutX="40.0" layoutY="190.0" styleClass="small-info" text="Total Passengers: 0" />

    <!-- Các nút hành động -->
    <Button layoutX="20.0" layoutY="240.0" text="Ticket Details" styleClass="action-button" onAction="#handleViewTicketDetails" />
    <Button layoutX="150.0" layoutY="240.0" text="Passenger Details" styleClass="action-button" onAction="#handleViewPassengerDetails" />
</AnchorPane>
