<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ManageGateController" prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="gateTable" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="80.0">
        <columns>
            <TableColumn text="Gate Number" fx:id="gateNumberColumn" />
            <TableColumn text="Status" fx:id="statusColumn" />
            <TableColumn text="Flight Using" fx:id="flightUsingColumn" />

        </columns>
    </TableView>

    <HBox spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <Button text="Add Gate" onAction="#handleAddGate" />
        <Button text="Delete Gate" onAction="#handleDeleteGate" />
        <Button text="Refresh" onAction="#handleRefresh" />
    </HBox>
</AnchorPane>
